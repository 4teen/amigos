<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.square.apps.amigos.Activities.ChatActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7">

        <ImageView
            android:id="@+id/friend_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/main_image"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_account_white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_border"
            android:contentDescription="@string/image_border"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/friend_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal|bottom"
            android:hint="@string/full_name"
            android:paddingBottom="8dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/picker_item_height" />

    </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight="0.2">

          <LinearLayout
              style="@style/Base.Widget.AppCompat.Light.PopupMenu"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layoutMode="opticalBounds"
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/chat_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:background="@color/cardview_light_background"
                  android:clickable="false"
                  android:drawableStart="@drawable/ic_chat_accent"
                  android:paddingBottom="8dp"
                  android:paddingEnd="6dp"
                  android:paddingStart="6dp"
                  android:paddingTop="6dp"
                  android:textSize="18sp" />


          </LinearLayout>

      </RelativeLayout>
  </LinearLayout>